{% comment %}
  Snippet can be used in section or block
  eg. {% include 'include-logo-list-slider' %}
{% endcomment %}

{% comment %}Assign object as block or section{% endcomment %}
{% if type == 'block' %}
  {% assign object = block %}
  {% assign loop = "1,2,3,4,5,6,7,8" | split: ',' %}
{% else %}
  {% assign object = section %}
  {% assign loop = section.blocks %}
{% endif %}

{% assign id = object.id %}
{% assign size = object.settings.logo_size %}
{% comment %}Background{% endcomment %}
{% assign background = object.settings.background %}
{% assign gradient = object.settings.gradient %}
{% assign gradient_rotation = object.settings.gradient_rotation %}
{% comment %}Layout{% endcomment %}
{% assign width = object.settings.width %}
{% assign padding_top = object.settings.padding_top %}
{% assign padding_bottom = object.settings.padding_bottom %}
{% assign padding_left = object.settings.padding_left %}
{% assign padding_right = object.settings.padding_right %}
{% assign animation = object.settings.animation | default: 'none' %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = object.settings.css_class %}
{% assign custom_css = object.settings.custom_css %}

{% comment %} Is the color set to transparent? {% endcomment %}
{% assign background_alpha = background | color_extract: 'alpha' %}
{% assign gradient_alpha = gradient | color_extract: 'alpha' %}

{% comment %} Section specific CSS {% endcomment %}
{% capture section_css -%}

  .section {
    background-image: linear-gradient({{ gradient_rotation }}deg, rgba(255,255,255,0), {{ gradient }});
    background-color: {%- if background_alpha != 0 -%}{{ background }}{%- endif -%};
    /*border-bottom: 2px solid #eee;*/
    padding-bottom: 33px;
  }
{%- endcapture -%}

{% style %}

#shopify-section-{{id}}{
    padding-top: {{padding_top}}px;
    padding-bottom: {{padding_bottom}}px;
    padding-left: {{padding_left}}px;
    padding-right: {{padding_right}}px;
    {% if width == 'wide' %}
        width: 100%;
        {% elsif width == 'half' %}width: 50%;
    {% endif %}
}
{% include 'css-loop', css: section_css, id: id %}{% include 'css-loop', css: custom_css, id: id %}

{% endstyle %}

{% comment %} HTML markup {% endcomment %}
<section class="section
                {{ css_class }}
                is-width-{{ width }}
                {% if background_alpha != 0 or gradient_alpha != 0  %}
                  has-background
                {% endif %}
                {% if section.blocks.size > 2 %}mobile-slider{% endif %}
                {% if section.blocks.size <= 3 %}desktop-slider--disabled{% endif %}
                "
                {% if animation != "none" %}
                  data-scroll-class="{{ animation }}"
                {% endif %}>

    <div class="container">
      <div class="logo-list-slider__nav-wrapper one-whole column is-flex">
        <div class="logo-list-slider__nav logo-list-slider__nav--prev">
          {% include settings.icon, name: 'left-arrow' %}
        </div>
        <div class="logo-list-slider__nav logo-list-slider__nav--next ">
          {% include settings.icon, name: 'right-arrow' %}
        </div>
      </div>
    </div>

  <div class="{% if section.blocks.size <= 3 or loop.length <= 0%} container {% endif %} 
              is-{{ size }}
              logo-list-slider__wrapper
              "  data-logo-list-slider  >
    {% if section.blocks.size > 0 or loop.length > 0 %}
      {% for item in loop %}

      {% if type == 'block' %}
        {% capture index %}{{ forloop.index }}{% endcapture %}
      {% else %}
        {% assign block = item %}
      {% endif %}

        {% comment %}Add number to id for each loop{% endcomment %}
        {% capture image %}image{{ index }}{% endcapture %}
        {% capture link %}link{{ index }}{% endcapture %}
        {% capture title %}title{{ index }}{% endcapture %}
        {% capture text %}text{{ index }}{% endcapture %}
        {% capture show_logo %}show_logo{{ index }}{% endcapture %}

        {% if block.settings[show_logo] or object != block %}
          <div class="logo-list-slider__item
            logo-list-slider__item--{{ forloop.length }}
            medium-down--one-whole
            column
            {% if section.blocks.size == 1 or loop.length == 1 %}
            one-whole
            {% elsif section.blocks.size == 2 or loop.length == 2 %}
            one-half
            {% else %}
            one-fifth
            {% endif %}
            " data-logo-index={{ index }} {% if type != 'block' %}{{ block.shopify_attributes }}{% endif %}>
            {% if block.settings[link] != blank %}
              <a href="{{ block.settings[link] }}" class="logo-list-slider__link" target="_blank">
            {% endif %}
            {% if block.settings[image] %}
              {% assign alt_text = block.settings[image].alt %}
              {% include 'image-element', image: block.settings[image], alt: alt_text %}
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings[title] != blank %}
                <h5>{{ block.settings[title] }}</h5>
            {% endif %}
            {% if block.settings[text] != blank %}
                {{ block.settings[text] }}
            {% endif %}
            {% if block.settings[link] != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</section>

{% comment %}JavaScript{% endcomment %}
<script data-theme-editor-load-script src="{{ 'z__jsLogoListSlider.js' | asset_url }}"></script>