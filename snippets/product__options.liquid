{% comment %}
  Set the extension of your color files below. Use 'png', 'jpeg', 'jpg' or 'gif'.
{% endcomment %}

{% assign file_extension = 'png' %}

{% assign id = id %}

{% assign swatch = option %}
{% assign found_option = false %}
{% assign is_color = false %}
{% assign option_index = 0 %}

{% for option in product.options %}
  {% if option == swatch %}
    {% assign found_option = true %}
    {% assign option_index = forloop.index0 %}
    {% assign downcased_option = swatch | downcase %}
    {% if downcased_option contains 'color' or downcased_option contains 'colour' %}
      {% assign is_color = true %}
    {% endif %}
  {% endif %}
{% endfor %}

<div class="swatch is-flex is-flex-wrap" data-option-index="{{ option_index }}" data-issingleoption="{{ single_option }}">
  <div class="option-title label" aria-label="{{ value | escape }}" tabindex="0">
    {% if swatch == "Size" %}
      Pack Size:
    {% else %}
      {{ swatch }}
    {% endif %}
    <span class="current-pack">{{ product.variants[0].options[option_index] }}</span>
  </div>

  {% assign single_option = false %}
  {% if product.variants.size == 1 %}
    {% assign single_option = true %}
  {% endif %}
  {% assign values = '' %}
  {% for variant in product.variants %}
    {% assign value = variant.options[option_index] %}
    {% unless values contains value %}
      {% assign values = values | join: ',' %}
      {% assign values = values | append: ',' | append: value %}
      {% assign values = values | split: ',' %}

      <input  {% if section.settings.products_per_row == '2' and variant.featured_image %}
                data-image="{{ variant.featured_image | img_url: '600x' }}"
              {% elsif section.settings.products_per_row == '3' and variant.featured_image %}
                data-image="{{ variant.featured_image | img_url: '500x' }}"
              {% elsif variant.featured_image %}
                data-image="{{ variant.featured_image | img_url: '400x' }}"
              {% endif %}
              class="swatch--{{ value | handle }}"
              id="swatch-{{ option_index }}-{{ value | handle }}{{ id }}-{{ product.id }}" 
              type="radio" 
              aria-label="{{ value | escape }}" 
              tabindex="0" 
              name="option-{{ option_index }}{{ id }}"
              value="{{ value | escape }}"
              {% if single_option %}
                checked
              {% endif %}/>
      <div class="swatch-wrapper {% if value == '12-Pack' %}have-highlight{% endif %}" {% if single_option %} style="display:none;"{% endif %}/>
        {%- comment -%}
        {% if value == '12-Pack' %}
        <div class="highlight">
          <span>Best Value</span>
        </div>
        {% endif %}
        {%- endcomment -%}
      <div aria-label="{{ value | escape }}" tabindex="0" 
            data-value="{{ value | escape }}" 
            data-value-handle="{{ value | handle }}" 
            class="swatch-element {% if is_color %}color {% endif %}{{ value | handle }}-swatch 
            {% if variant.available %}available{% else %}soldout{% endif %}">

        {% if is_color %}
          <div class="tooltip">{{ value }}</div>
        {% endif %}

        {% if is_color %}
          <label  {% if section.settings.products_per_row == '2' and variant.featured_image%}
                    data-image="{{ variant.featured_image | img_url: '600x' }}"
                  {% elsif section.settings.products_per_row == '3' and variant.featured_image %}
                    data-image="{{ variant.featured_image | img_url: '500x' }}"
                  {% elsif variant.featured_image %}
                    data-image="{{ variant.featured_image | img_url: '400x' }}"
                  {% endif %}
            for="swatch-{{ option_index }}-{{ value | handle }}{{ id }}-{{ product.id }}" 
                style="background-color: {{ value | split: ' ' | last | handle }};">

            {% assign image_name = value | handle | append: '.' | append: file_extension %}
            {% assign swatch = images[image_name] %}

            <img class="swatch__image {% if swatch == empty %}swatch__image--empty{% endif %}" 
                src="{{ swatch | img_url: '50x' }}" alt="">

            <span class="crossed-out" aria-label="{{ 'products.product.sold_out' | t }}" 
                alt="{{ 'products.product.sold_out' | t }}"></span>
          </label>
        {% else %}
          <label for="swatch-{{ option_index }}-{{ value | handle }}{{ id }}-{{ product.id }}">
            {% if section.settings != blank %}
            {% if single_option == false %}
              {% if section.settings.six_pack_image or section.settings.twelve_pack_image or section.settings.eighteen_pack_image %}
                <div class="pack-image">
                  {% if value == '6-Pack' %}
                    {% if section.settings.six_pack_image %}
                      <img src="{{ section.settings.six_pack_image | img_url: '250x' }}" alt="">
                    {% endif %}
                  {% endif %}
                  {% if value == '12-Pack' %}
                    {% if section.settings.twelve_pack_image %}
                      <img src="{{ section.settings.twelve_pack_image | img_url: '250x' }}" alt="">
                    {% endif %}
                  {% endif %}
                  {% if value == '18-Pack' %}
                    {% if section.settings.eighteen_pack_image %}
                      <img src="{{ section.settings.eighteen_pack_image | img_url: '250x' }}" alt="">
                    {% endif %}
                  {% endif %}
                </div>
              {% endif %}
              {% endif %}
            {% endif %}
            {{ value }} {% if value == '12-Pack' %}<span>(Best Value)</span>{% else %}<span>&nbsp;</span>{% endif %}
            <span class="crossed-out" aria-label="{{ 'products.product.sold_out' | t }}" 
                alt="{{ 'products.product.sold_out' | t }}"></span>
          </label>
        {% endif %}
      </div>
      {% if single_option == false %}
      <span class="swatch-{{ option_index }}-{{ value | handle }}{{ id }}-{{ product.id }}-price {% if product.available == false %}hidden{% endif %}">
        {% if variant.price > 0 %}
        {% assign bags = value | handle | split: '-' %}
        {% capture testValue %}{{ bags[0] | plus: 0 }}{% endcapture %}
        {% assign ozs = testValue | times: 3 %}
          {% unless testValue contains '"' %}
            <span class="swatch-money swatch-money-onetime" style="display:none;">{{ ozs }} ounces ({{ variant.price | divided_by: ozs | round | money }}/oz)</span>
            <span class="swatch-money swatch-money-subscribe">{{ ozs }} ounces ({{ variant.metafields.subscriptions.discount_variant_price | replace: ".", ""  | divided_by: ozs| round | money }}/oz)</span>
          {% endunless %}
        {% else %}
          {{ settings.free_price_text }}
        {% endif %}
      </span>
      {% endif %}
      </div>
    {% endunless %}
  {% endfor %}
</div>
