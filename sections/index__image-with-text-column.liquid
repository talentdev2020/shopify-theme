{% comment %}
** Image with text column - dynamic **
- Draggable section
- Uses blocks
{% endcomment %}

{% assign id = section.id %}
{% comment %}Colors{% endcomment %}
{% assign text_color = section.settings.text_color %}
{% assign image_color = section.settings.image_color %}
{% assign background = section.settings.background %}
{% assign gradient = section.settings.gradient %}
{% assign gradient_rotation = section.settings.gradient_rotation %}
{% comment %}Layout{% endcomment %}
{% assign show_gutter = section.settings.show_gutter %}
{% assign width = section.settings.width %}
{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}
{% assign padding_left = section.settings.padding_left %}
{% assign padding_right = section.settings.padding_right %}
{% assign animation = section.settings.animation %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} Is the color set to transparent? {% endcomment %}
{% assign text_alpha = text_color | color_extract: 'alpha' %}
{% assign image_alpha = image_color | color_extract: 'alpha' %}
{% assign background_alpha = background | color_extract: 'alpha' %}
{% assign gradient_alpha = gradient | color_extract: 'alpha' %}

{% comment %} Section specific CSS {% endcomment %}
{% capture section_css -%}

  .image-column__title {
    color: {%- if text_alpha != 0 -%}{{ section.settings.text_color }}{%- endif -%};
  }

  .image {
    fill: {%- if image_alpha != 0 -%}{{ section.settings.image_color }}{%- endif -%};
  }

  .image-column__text {
    color: {%- if text_alpha != 0 -%}{{ section.settings.text_color }}{%- endif -%};
  }

{%- endcapture -%}

{% style %}
  #shopify-section-{{ section.id }} {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    padding-left: {{ padding_left }}px;
    padding-right: {{ padding_right }}px;
    background-color: {%- if background_alpha != 0 -%}{{ background }}{%- endif -%};
    {% if width == 'wide' %}
      width: 100%;
    {% elsif width == 'half' %}
      width: 50%;
    {% endif %}
  }
  {% include 'css-loop', css: section_css, id: id %}
  {% include 'css-loop', css: custom_css, id: id %}
{% endstyle %}

<section class="section
                {{ css_class }}
                is-width-{{ width }}
                {% if show_gutter == false %}
                  has-no-side-gutter
                  has-background
                {% else %}
                  has-gutter-enabled
                {% endif %}
                {% if section.blocks.size > section.settings.images_per_row %}
                  has-multirow-blocks
                {% endif %}
                {% if width == 'wide' %}
                  equal-columns--outside-trim
                {% endif %}"
                {% if animation != "none" %}
                  data-scroll-class="{{ animation }}"
                {% endif %}>
  <div class="container is-justify-center">
    <div class="image-with-text-column__title 
                text-align-{{ section.settings.align_text }}
                one-whole
              ">
      {% if section.settings.title != blank %}
        <h3 class="image-with-text__heading text-align-{{ section.settings.alignment }} is-{{ section.settings.heading_size }}" >
          {{ section.settings.title }}
        </h3>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="image-with-text__text text-align-{{ section.settings.alignment }} content">
          {{ section.settings.text }}
        </div>
      {% endif %}
    </div> 

    {% for block in section.blocks %}
      <div class="image-with-text-column__column
                  image-with-text-column__column_{{ forloop.index }}
                  {% if show_gutter %}
                    has-gutter
                  {% endif %}
                  column
                  has-padding
                  {% include 'column-width', value: section.settings.images_per_row %}
                  text-align-{{ section.settings.align_text }}
                  medium-down--one-whole">

        {%- capture image_size -%}
          is-{{ section.settings.image_size }}
        {%- endcapture -%}

        {% if block.settings.image != blank %}
            {% include 'image-element', image: block.settings.image, alt: block.settings.image.alt, stretch_width: true, additional_classes: 'image-with-text-column__image' %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}

        {% if block.settings.title != blank or block.settings.text != blank %}
          <div class="image-column__text ">
            {% if block.settings.title != blank %}
            <h3 class="image-column__title title">{{ block.settings.title }}</h3>
            {% endif %}
            {{ block.settings.text }}
          </div>
        {% endif %}

        {% if block.settings.button_label != blank %}
          <div class="image-column__action has-padding-top">
            {% include 'button', label: block.settings.button_label, href: block.settings.link, style: section.settings.button_style, type: "link" %}
          </div>
        {% endif %}

        {% if block.settings.note_text != blank %}
        <div class="image-column__note_text ">
          {{ block.settings.note_text }}
        </div>
      {% endif %}

      </div>
    {% endfor %}
  </div>
</section>

