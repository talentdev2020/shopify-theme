<img class='landing-img' src="{{ section.settings.background | img_url: '2000x' }}"  />
<div class='landing-hero'> 
  <p class="hero-header">{{section.settings.heading}}</p>
  <p class="hero-content">{{section.settings.content}}</p>
  <form action='/'>
    <input type='email' name='email' id='email' placeholder="Enter your Email" class="email border-round"></input>
    <input type='submit' class='button-access border-round' value="{{section.settings.button}}" class="button-black border-round"> </input>
  </form>
  <div class="as-seen">
    <div class="logo-header">
      As Seen:
    </div>
    <div class="image-block">
      {% for block in section.blocks%}
      <div>
        <img class='logo' src="{{block.settings.logo | img_url: '96x30' }}" />
      </div>
      {%endfor%}
    </div>
  </div>
<div>

