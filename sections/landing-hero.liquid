 {% schema %}

 {
  "name": "Landing hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "header",
      "default": "The Ultimate Mission-Based Cookie"
    },
    {
      "type": "text",
      "id": "content",
      "label": "content",
      "default": "For ever cookie sold, we donate 1 meal to partner soup kitchens"
    },
    {
      "type": "text",
      "id": "button",
      "label": "button",
      "default": "GET ACCESS"
    },
    {
      "type": "image_picker",
      "id": "background",
      "label": "Backgrond",
      "info": "1800 x 800px recommended"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "logo block",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo",
          "info": "96 x 30px recommended"
        }
      ]
    }
  ]
}

{% endschema %}
