{% comment %}
** Page details - custom view **
- Page template
- Uses blocks
{% endcomment %}

{% assign id = section.id %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} Section specific CSS {% endcomment %}
{% style %}
  {% include 'css-loop', css: custom_css, id: id %}
{% endstyle %}

<section class="details__page {{ css_class }}" data-check-for-order="true">

  {% if section.blocks.size > 0 %}
    <div class="page-details__blocks is-flex is-flex-wrap is-justify-center">
      {% for block in section.blocks %}

        <div id="shopify-section-{{ block.id }}" {{ block.shopify_attributes }}
        class="shopify-section
                details__block
                block__{{ block.type | downcase | replace: '_', '-' }}

                {% if block.type == 'monthly_box__videobanner' %}
                  Monthly-Box_video video-section jsVideo

                {% elsif block.type == 'monthly_box__texts' %}
                  text-with_background medium-down--hide-cookie_bg

                {% elsif block.type == 'monthly-box__product' %}
                  
                {% elsif block.type == 'monthly_box__icontexts' %}
                    monthly-box__icontext medium-down--hide-cookie_bg

                {% elsif block.type == 'monthly_box__wideimage' %}
                    wide-image

                {% elsif block.type == 'monthly_box__faq' %}
                {% endif %}">

        {% if block.type == "monthly_box__videobanner" %}
          {% include 'include-video', type: 'block' %}

        {% elsif block.type == "monthly_box__texts" %}
          {% include 'include-icon-with-text-button', type: 'block' %}

        {% elsif block.type == 'monthly-box__product' %}
            <!-- FAQ Products -->
            <div class="monthly-box-product-container" id="monthly-box-product-container">
            </div>

        {% elsif block.type == 'monthly_box__icontexts' %}
          {% include 'include-icon-with-text', type: 'block' %}

        {% elsif block.type == 'monthly_box__wideimage' %}
          {% include 'include-wide-image' %}

        {% elsif block.type == 'monthly_box__faq' %}
            <!-- FAQ -->
            <div class="monthly-box-faq-container" id="monthly-box-faq-container">
            </div>
        {% endif %}

        </div>
      {% endfor %}
    </div>
  {% endif %}

</section>

