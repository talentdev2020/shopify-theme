{% assign width = section.settings.width %}
{% assign padding_top = section.settings.padding_top %}
{% assign padding_bottom = section.settings.padding_bottom %}
{% comment %} Advanced {% endcomment %}
{% assign css_class = section.settings.css_class %}
{% assign custom_css = section.settings.custom_css %}

{% comment %} CSS {% endcomment %}
{% style %}
  .section__wrapper {
    padding-top: {{ padding_top }}px;
    padding-bottom: {{ padding_bottom }}px;
    {% if width == 'wide' -%}
      width: 100%;
      max-width: 95%;
    {%- endif %}
  }

  {% include 'css-loop', css: custom_css, id: id %}
{% endstyle %}

<section class="section__wrapper section {{ css_class }}">

  <div class="container hide-when-banner-enabled cart__heading-container">
    {% capture heading_title %}{{ 'cart.general.title' | t }}{% endcapture %}
    {% include 'heading', title: heading_title, heading_tag: 'h1', context: 'cart-page', text_alignment: 'left' %}
  </div>

  <div class="container cart__empty-cart-message {% if cart.item_count > 0 %}is-hidden{% endif %}">
    <div class="column one-whole text-align-center has-padding-top has-padding-bottom">
      <h2 class="quote">{{ 'cart.general.continue_browsing_html' | t }}</h2>
      <a href="{% if cart.items.first.product.collections != blank %}{{ cart.items.first.product.collections.last.url }}{% else %}{{ routes.all_products_collection_url }}{% endif %}" class="action_button continue-button add_to_cart">{{ 'cart.general.continue_shopping_link_html' | t }}</a>
    </div>
  </div>

  <div class="cart__form {% if cart.item_count == 0 %}is-hidden{% endif %}">
    <form action="{{ routes.cart_url }}" method="post" id="cart_form" class="{% if cart.item_count == 0 %}visuallyhidden{% endif %} quantity-box-enabled-{{ section.settings.display_product_quantity_cart }}">
      <div class="container">
        <div class="container three-fourths medium-down--one-whole column">
          <div class="cart__item-list column medium-down--one-whole">
            {% assign total_saving = 0 %}
            {% for item in cart.items %}
              {% if item.variant.compare_at_price > item.variant.price %}
                {% assign saving = item.variant.compare_at_price | minus: item.variant.price | times: item.quantity %}
                {% assign total_saving = saving | plus: total_saving %}
              {% endif %}

              <div class="cart__card container is-align-center" data-cart-item="{{ item.key }}" data-line-item="{{ forloop.index }}">
                <div class="cart__image">
                  <a href="{{ item.url }}" title="{{ item.title | escape }}" class="cart_page_image">
                    {% include 'image-element', image: item.image, alt: item.title, object_fit: true, max_height: 150 %}
                  </a>
                </div>
                <div class="cart__info">
                  <div class="cart__description">
                    <div class="cart__text">
                      <p class="item__title highlight__text">
                        <a href="{{ item.url }}">{{ item.product.title }}</a>
                      </p>

                      {% unless item.variant.title contains "Title" %}
                        <p class="item__properties">
                          {% for option in item.product.options %}
                            <span>{{ option }}:</span> <span>{{ item.variant.options[forloop.index0] }}</span><br />
                          {% endfor %}
                        </p>
                      {% endunless %}

                      {% if item.properties %}
                        <p>
                          {% for p in item.properties %}
                            {% unless p.last == blank %}
                              {% if p.last contains '/uploads/' %}
                                <div>
                                  {{ p.first }}: <a class="lightbox" href="{{ p.last }}">{{ 'cart.general.uploaded_file' | t }}</a>
                                </div>
                              {% else %}
                                <div>
                                  {{ p.first }}: {{ p.last }}
                                </div>
                              {% endif %}
                            {% endunless %}
                          {% endfor %}
                        </p>
                      {% endif %}

                    </div>
                    <div class="cart__remove medium-down--hide">
                      <a class="cart__remove-btn is-inline-flex is-align-center is-justify-center ajax-cart__delete" data-cart-page-delete data-cart-item-key="{{ item.key }}" data-line-item-key={{ forloop.index }} href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" title="{{ 'cart.general.remove' | t }}" >
                        Remove
                      </a>
                    </div>
                  </div>

                  {% if section.settings.display_product_quantity_cart %}
                    <div class="cart__quantity is-flex">
                      <div class="one-whole">
                        <p class="cart__quantity-title">{{'cart.general.quantity' | t }}</p>   
                        <div class="medium-down--visible cart__total-hide">
                          <p>
                            {% if item.final_line_price > 0 %}
                              <span >{{ item.final_line_price | money }}</span>
                            {% else %}
                              {{ settings.free_price_text }}
                            {% endif %}
                          </p>
                        </div>
                      </div>
                      <div class="purchase-details__quantity product-quantity-box" data-line-item-key={{ forloop.index }}>
                        {% include 'quantity-box', size: 'is-medium', variant: item.variant %}
                      </div>
                      <div class="cart__remove medium-down--visible">
                        <a class="cart__remove-btn is-inline-flex is-align-center is-justify-center ajax-cart__delete" data-cart-page-delete data-cart-item-key="{{ item.key }}" data-line-item-key={{ forloop.index }} href="{{ routes.cart_change_url }}?line={{ forloop.index }}&amp;quantity=0" title="{{ 'cart.general.remove' | t }}" >Remove</a>
                      </div>
                    </div>
                  {% endif %}

                  <div class="cart__total">
                    <p>{{'cart.general.total' | t }}</p>
                    <p>
                      {% if item.final_line_price > 0 %}
                        <span class="money">{{ item.final_line_price | money }}</span>
                      {% else %}
                        {{ settings.free_price_text }}
                      {% endif %}
                    </p>
                  </div>
                </div>

              </div>
            {% endfor %}

            {% if settings.enable_shipping_calculator == true %}
              <div class="container">
                {% include 'shipping-calculator' %}
              </div>
            {% endif %}

            {% if settings.display_special_instructions %}
              <div class="has-padding-top container">
                <span class="cart__notes">
                    <div class="field">
                      <label class="visuallyhidden" for="note">{{ 'cart.general.note' | t: shop_name: shop.name }}:</label>
                      <div class="control">
                        <textarea class="textarea" id="note" name="note" rows="2" placeholder="{{ 'cart.general.note_detailed' | t: shop_name: shop.name }}">{{ cart.note }}</textarea>
                      </div>
                    </div>
                </span>
              </div>
            {% endif %}

          </div>
        </div>

        <div class="cart__price-breakdown {% if settings.display_tos_checkbox %}js-tos-enabled{% endif %} one-fourth medium-down--one-whole column">
            <div class="cart__cost-summary container is-flex-column">
              <div class="medium-down--one-whole">
                {%- if cart.cart_level_discount_applications != blank -%}
                  <div class="cart__discounts cart__row">
                    {%- for discount_application in cart.cart_level_discount_applications -%}
                      <div class="cart__row-description">
                        <p class="cart__discount-title">{{- discount_application.title -}}</p>
                      </div>
                      <p class="cart__discount">
                        <span class="money">-{{ discount_application.total_allocated_amount | money }}</span>
                      </p>
                    {%- endfor -%}
                  </div>
                {%- endif -%}
                <div class="cart__subtotal-container cart__row">
                  <div class="cart__row-description">
                    <p class="">{{ 'cart.general.subtotal' | t }}:</p>
                  </div>
                  <p class="cart__subtotal">
                    <span class="money">{{ cart.total_price | money }}</span>
                  </p>
                </div>

                <div class="cart__shipping-container cart__row">
                  <div class="cart__row-description">
                    <p class="">{{ 'cart.general.shipping' | t }}:</p>
                  </div>
                  <p class="cart__shipping text-align-right">{{ 'cart.general.shipping_content' | t }}</p>
                </div>

                <div class="cart__carttotal-container cart__row">
                  <div class="cart__row-description">
                    <p class="">{{ 'cart.general.cart_total' | t }}:</p>
                  </div>
                  <p class="">
                    <span class="money">{{ cart.total_price | money }}</span>
                  </p>
                </div>

                {% if section.settings.display_savings and total_saving > 0 %}
                  <div class="cart__total-savings cart__row">
                    <div class="cart__row-description">
                      <p class="cart">{{ 'layout.general.savings' | t }}:</p>
                    </div>
                    <p class="cart__total-discount">
                      <span class="money">{{ total_saving | plus: cart.total_discount | money }}</span>
                    </p>
                  </div>
                {% endif %}
              </div>
              <div class="cart__checkout-container container has-padding-top has-no-side-gutter">
                <div class="one-whole column is-flex is-align-center cart__checkout-elements">
                  {% if settings.display_tos_checkbox %}
                    <div class="cart__tos">
                      <div class="field">
                        <label class="tos_label" for="cart_agree">
                          <input type="checkbox" class="tos_agree" id="cart_agree" required />
                          {{ 'cart.general.agree_to_terms_html' | t }}
                        </label>
                        {% if settings.tos_page != blank %}
                          <div class="cart__view-terms-container">
                            <a href="{{ pages[settings.tos_page].url }}" class="text-align-right" target="_blank"  rel="noopener">{{ 'cart.general.view_terms' | t }}</a>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>
                <div class="one-whole column {% if section.settings.display_continue_shipping == false %} is-flex {% endif %} is-align-center is-justify-end cart__buttons">

                  <div class="cart__checkout">
                    <input type="submit" class="button add_to_cart checkout" id="checkout" name="checkout" value="{{ 'cart.general.checkout' | t }}" />
                  </div>

                  {% if cart.item_count > 0 %}
                    {% if section.settings.display_continue_shipping %}
                    <div class="cart__featured-links">
                      <a href="{% if cart.items.first.product.collections != blank %}{{ cart.items.first.product.collections.last.url }}{% else %}{{ routes.all_products_collection_url }}{% endif %}">{{ 'cart.general.continue_shopping_link_html' | t }}</a>
                    </div>
                    {% endif %}
                  {% endif %}

                </div>
                <div class="one-whole column is-flex is-align-center is-justify-end">
                  {% if content_for_additional_checkout_buttons %}
                    <div class="additional-checkout-buttons">
                      {{ content_for_additional_checkout_buttons }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>

            {% if section.settings.cart_message != blank %}
            <div class="cart__cart-message text-align-center highlight__text">
              {{ section.settings.cart_message }}
            </div>
            {% endif %}
        </div>
      </div>

    </form>

  </div>

</section>

<div class="container is-justify-center has-padding-top cart__blocks">
  {% for block in section.blocks %}
    {% if block.type == 'list_collection' %}
      <div id="shopify-section-{{ block.id }}" {{ block.shopify_attributes }} class="shopify-section cart__block block__{{ block.type | downcase | replace: '_', '-' }} list-collection-section jsListCollection">
        {% include 'include-list-collection', type: 'block' %}
        <script src="{{ 'z__jsListCollection.js' | asset_url }}"></script>
      </div>
    {% elsif block.type == 'featured_collection' %}
      <div id="shopify-section-{{ block.id }}" {{ block.shopify_attributes }} class="shopify-section cart__block block__{{ block.type | downcase | replace: '_', '-' }} featured-collection-section jsFeaturedCollection">
        {% include 'include-featured-collection', type: 'block' %}
        {% comment %}JavaScript{% endcomment %}
          <script
              type="application/json"
              data-section-id="{{ section.id }}"
              data-section-data
          >
            {
              "collection_style": {{ layout | json }},
              "products_per": {{ block.settings.products_per_row | json}},
              "products_available": {{ collections[col].all_products_count | json }},
              "products_limit": {{ block.settings.products_limit | json }},
              "align_height": {{ block.settings.align_height | json }}
            }
          </script>
          <script src="{{ 'z__jsFeaturedCollection.js' | asset_url }}"></script>
      </div>
    {% elsif block.type == 'featured_product' %}
      <div id="shopify-section-{{ block.id }}" {{ block.shopify_attributes }} class="shopify-section cart__block block__{{ block.type | downcase | replace: '_', '-' }} featured-product-section jsProduct">
        {% include 'include-featured-product', type: 'block' %}
        <script
              type="application/json"
              data-section-id="{{ section.id }}"
              data-section-data
          >
            {
              "gallery_arrows": {{ block.settings.gallery_arrows | json }},
              "thumbnail_arrows": {{ block.settings.gallery_arrows | json }},
              "enable_zoom": {{ block.settings.enable_zoom | json }},
              "enable_product_lightbox": {{ block.settings.enable_product_lightbox | json }},
              "slideshow_speed": {{ block.settings.slideshow_speed | json }},
              "slideshow_animation": {{ block.settings.slideshow_animation | json }},
              "image_position": {{ block.settings.image_position | json }},
              "thumbnail_slider": {{ block.settings.enable_thumbnail_slider | json }},
              "product_images_amount": {{ product.images.size }},
              "template": "featured-product-section"
            }
          </script>
      </div>
    {% endif %}
    <div id="shopify-section-{{ block.id }}" {{ block.shopify_attributes }} class="shopify-section cart__block block__{{ block.type | downcase | replace: '_', '-' }}">
    {% if block.type == 'text' %}
      {% include 'include-rich-text', type: 'block' %}
    {% endif %}
    </div>
  {% endfor %}
</div>

{% comment %}JavaScript{% endcomment %}
<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-data
>
  {
    "shipping": {
      "multiple_rates": {{ 'cart.shipping_calculator.multiple_rates' | t: number_of_rates: '*number_of_rates*', address: '*address*', rate: '*rate*' | json }},
      "one_rate": {{ 'cart.shipping_calculator.one_rate' | t: address: '*address*' | json }},
      "no_rates": {{ 'cart.shipping_calculator.no_rates' | t | json }},
      "rate_value": {{ 'cart.shipping_calculator.rate_value' | t: rate_title: '*rate_title*', rate: '*rate*'  | json }}
    }
  }
</script>
<script src="{{ 'z__jsCart.js' | asset_url }}"></script>
<script src="{{ 'z__jsShippingCalculator.js' | asset_url }}"></script>

